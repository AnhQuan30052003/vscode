
void quick_sort(int a[], int f, int l)
{
    int left = f, right = l;
    int x = a[(f+l)/2];

    while (left <= right)
    {
        while (a[left] < x && left < l) left++;
        while (a[right] > x && right > f) right--;

        if (left <= right)
        {
            swap(a[left], a[right]);
            left++;
            right--;
        }
    }

    if (f < right) quick_sort(a, f, right);
    if (left < l) quick_sort(a, left, l);
}